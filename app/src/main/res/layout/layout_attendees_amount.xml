<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_event_details"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/stroke_rectangle_grey_curved"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_attendees"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_icon_user_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_attendees_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:text="No. of attendees"
            app:layout_constraintStart_toEndOf="@+id/iv_attendees"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_attendees_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="3"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/iv_attendees"
            app:layout_constraintTop_toBottomOf="@id/tv_attendees_title" />

        <ImageView
            android:id="@+id/iv_rupees"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_icon_rupee_grey"
            app:layout_constraintStart_toEndOf="@id/tv_attendees_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="Total Amount"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_attendees_title"
            app:layout_constraintStart_toEndOf="@id/iv_rupees"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="1500"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_attendees_value"
            app:layout_constraintStart_toEndOf="@id/iv_rupees"
            app:layout_constraintTop_toBottomOf="@id/tv_amount_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>