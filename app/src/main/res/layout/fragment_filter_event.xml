<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_16sdp"
    android:layout_marginEnd="20dp"
    android:gravity="center|top"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="Event Types"
            android:textAlignment="textStart"
            android:textSize="@dimen/_10sdp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/radio_group_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            app:singleSelection="true"></com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/leted_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="Event Status"
            android:textAlignment="textStart"
            android:textSize="@dimen/_10sdp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/radio_group_leted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:checkable="true"
                android:text="Completed"
                android:textColor="@color/chip_text_states"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/chip_states" />

            <com.google.android.material.chip.Chip
                android:id="@+id/cancelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:checkable="true"
                android:text="Cancelled"
                android:textColor="@color/chip_text_states"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/chip_states" />

            <com.google.android.material.chip.Chip
                android:id="@+id/upcoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:checkable="true"
                android:text="Upcoming"
                android:textColor="@color/chip_text_states"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/chip_states" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            android:text="Subscription Type"
            android:textAlignment="textStart"
            android:textSize="@dimen/_10sdp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/radio_group_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingStart="@dimen/_8sdp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:checkable="true"
                android:text="Paid"
                android:textColor="@color/chip_text_states"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/chip_states" />

            <com.google.android.material.chip.Chip
                android:id="@+id/free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:checkable="true"
                android:text="Free"
                android:textColor="@color/chip_text_states"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:checkedIconEnabled="false"
                app:chipBackgroundColor="@color/chip_states" />

        </com.google.android.material.chip.ChipGroup>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_filter"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/bg_button_rounded_corners"
            android:backgroundTint="@color/colorPrimary"
            android:text="Filter"
            android:textColor="@color/white" />


    </LinearLayout>
