<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- total revenue-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/_4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_left_border_blue">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:text="Revenue Generated"
                    android:textColor="@color/dark_grey2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/appCompatTextView16"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView16"
                    app:srcCompat="@drawable/ic_analytics_revenue_total" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_revenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"

                    android:textColor="@color/blue_card"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView5"
                    app:layout_constraintStart_toEndOf="@+id/appCompatImageView5"
                    app:layout_constraintTop_toTopOf="@+id/appCompatImageView5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!--pie chart-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/_4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_left_border_red">

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/pie_chart"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Completed"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/appCompatTextView21"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pie_chart" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/appCompatTextView20"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView20"
                    app:srcCompat="@drawable/ic_color_chip_green" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_completed_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"

                    android:textColor="@color/grey"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView6"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView6" />


                <!--ongoing-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OnGoing"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/appCompatTextView20"
                    app:layout_constraintEnd_toStartOf="@+id/appCompatTextView22"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/appCompatTextView20"
                    app:layout_constraintTop_toTopOf="@+id/appCompatTextView20" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/appCompatTextView21"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView21"
                    app:srcCompat="@drawable/ic_color_chip_orange" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_ongoing_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/grey"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView7"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView7" />


                <!--cancelled-->

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/appCompatTextView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/appCompatTextView21"
                    app:layout_constraintTop_toTopOf="@+id/appCompatTextView21" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/appCompatImageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/appCompatTextView22"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatTextView22"
                    app:srcCompat="@drawable/ic_color_chip_red" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_cancelled_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/grey"
                    app:layout_constraintStart_toStartOf="@+id/appCompatImageView8"
                    app:layout_constraintTop_toBottomOf="@+id/appCompatImageView8" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!--bar chart-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/_4dp">

           <com.highsoft.highcharts.core.HIChartView
               android:id="@+id/bar_chart"
               android:layout_width="match_parent"
               android:layout_height="@dimen/_300sdp"/>


        </androidx.cardview.widget.CardView>

        <!-- event search-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            app:cardCornerRadius="0dp"
            app:cardElevation="@dimen/_4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_left_border_green">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_analytics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_corner_grey_8"
                    app:iconifiedByDefault="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:queryHint="Search here for event Name/Location" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/spinner_event_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_corner_grey_8"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:focusable="true"
                    android:gravity="center|start"
                    android:hint="Select event status"
                    android:paddingStart="@dimen/_16sdp"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/search_analytics"
                    tools:text="Upcoming" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView2">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_event_list_analytics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:nestedScrollingEnabled="true"
                tools:listitem="@layout/analytics_item_row" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/no_data"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/dark_grey2"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
