<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="in.bitspilani.eon.login.ui.ForgotPasswordSteps" />
        <import type="in.bitspilani.eon.login.ui.USER_TYPE" />
        <variable
            name="step"
            type="in.bitspilani.eon.login.ui.ForgotPasswordSteps" />
        <import type="android.view.View" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".login.ui.ResetPassword"
        android:background="@color/navy">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_25sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_20fs"
                android:visibility="@{step == ForgotPasswordSteps.SUCCESS ? View.GONE : View.VISIBLE }"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textColor="@color/white"
                android:textSize="@dimen/_16fs"
                android:visibility="@{step == ForgotPasswordSteps.SUCCESS ? View.GONE : View.VISIBLE }"/>

            <com.shuhart.stepview.StepView
                android:id="@+id/step_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5dp"
                android:padding="16dp"
                app:sv_nextStepCircleEnabled="true"
                app:sv_animationType="Line"
                app:sv_doneStepLineColor="@color/colorPrimaryDark"
                app:sv_nextStepLineColor="@color/colorPrimary"
                app:sv_selectedStepNumberColor="@color/white"
                app:sv_doneStepMarkColor="@color/white"
                app:sv_doneTextColor="@color/colorPrimaryDark"
                app:sv_selectedTextColor="@color/colorPrimaryDark"
                app:sv_nextTextColor="@color/colorPrimary"
                app:sv_doneCircleColor="@color/colorPrimaryDark"
                app:sv_selectedCircleColor="@color/colorPrimaryDark"
                app:sv_nextStepCircleColor="@color/colorPrimary"
                android:visibility="@{step == ForgotPasswordSteps.SUCCESS ? View.GONE : View.VISIBLE }"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_20dp"
                android:background="@drawable/custom_shape">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{step == ForgotPasswordSteps.ENTER_DETAILS ? View.VISIBLE : View.GONE }"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailAddressWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/organizationNameWrapper"
                        android:theme="@style/TextLabel"
                        android:layout_marginTop="@dimen/_10dp"
                        android:padding="@dimen/_12dp"
                        android:background="@drawable/bg_edit_text">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_user_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:drawableLeft="@drawable/ic_icon_mail_grey"
                            android:drawableStart="@drawable/ic_icon_mail_grey"
                            android:drawablePadding="@dimen/_20dp"
                            android:hint="@string/email_id"
                            android:textSize="@dimen/_18dp"
                            android:textColorHint="@color/grey"
                            android:background="@android:color/transparent"/>

                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{step == ForgotPasswordSteps.VERIFICATION_CODE ? View.VISIBLE : View.GONE }">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bankAccountNumberWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        android:layout_marginTop="@dimen/_10dp"
                        android:padding="@dimen/_12dp"
                        android:background="@drawable/bg_edit_text">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edit_verification_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:drawableLeft="@drawable/ic_account_number"
                            android:drawableStart="@drawable/ic_account_number"
                            android:drawablePadding="@dimen/_20dp"
                            android:hint="@string/verification_code"
                            android:textSize="@dimen/_18dp"
                            android:textColorHint="@color/grey"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:text="@string/verification_code_text"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{step == ForgotPasswordSteps.PASSWORD ? View.VISIBLE : View.GONE }">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        android:padding="@dimen/_12dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:background="@drawable/bg_edit_text">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_create_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:drawableLeft="@drawable/ic_icon_lock_password_grey"
                            android:drawableStart="@drawable/ic_icon_lock_password_grey"
                            android:drawablePadding="@dimen/_20dp"
                            android:hint="@string/create_new_password"
                            android:textSize="@dimen/_18dp"
                            android:textColorHint="@color/grey"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextLabel"
                        android:padding="@dimen/_12dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:hint="@string/re_enter_password"
                        android:background="@drawable/bg_edit_text">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/edt_re_enter_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:drawableLeft="@drawable/ic_icon_lock_password_grey"
                            android:drawableStart="@drawable/ic_icon_lock_password_grey"
                            android:drawablePadding="@dimen/_20dp"
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{step == ForgotPasswordSteps.SUCCESS ? View.VISIBLE : View.GONE }">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_icon_check_green_circle"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_16sdp"
                        android:text="@string/password_set_message"
                        android:gravity="center_horizontal"/>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_forgot_password_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:background="@drawable/bg_button_rounded_corners"
                android:text="@string/next"
                android:textColor="@color/white"
                android:visibility="@{step == ForgotPasswordSteps.SUCCESS ? View.GONE : View.VISIBLE }"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>